<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">
	
<jheat-mapping>

	<class-mapping class="br.com.infowaypi.ecarebc.procedimentos.GrupoCBHPM" name="GrupoCBHPM" display-name="Grupo" 
		id-name="idClassificacaoCBHPM" link-for-detail="descricao" type="simple" section="cadastros, cadastrosAuditor, cadastrosRedeCredenciada">
		
		<description>Grupos referentes ao cadastro do Tabela Saúde Recife</description>
		
		<property name="codigo" type="string" >
			<display name="Código" options="listing,search" maxlength="3" 
				mask-detail="Código do grupo, apenas 3(três) caracteres" size="5"/>
		</property>
		
		<property name="descricao" type="string">
			<display name="Descricao" options="listing,search"/>
		</property>
		
		<many-to-one name="capituloCBHPM" display-name="Capítulo" options="listing,search" 
				class="br.com.infowaypi.ecarebc.procedimentos.CapituloCBHPM" autocomplete="true"
				minimum-characters="3" mask-detail="Digite o nome do catítulo">
			<display-property name="codigoDescricao" display-name="Capítulo"/>
		</many-to-one>

		<properties-order>
			<property-order name="codigo"/>
		</properties-order>
		
		<validate-method name="validate"/>
		
	</class-mapping>
	
</jheat-mapping>