<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">
	
<jheat-mapping>
	<flow 
		name="fecharGuiaAnestesista" 
		class="br.com.infowaypi.ecare.services.internacao.FecharGuiaAnestesistaService"
		display-name="Fechar Guia" section="honorarioAnestesita" roles="prestadorAnestesista">
			
		<description>Fechar Guia</description>		

		<step-method name="buscarGuia" display-name="Informar Número de Autorização" title="Informar Número de Autorização" buttons-position="bottom">
			<step-param name="autorizacao" required="true" input-type="string" size="12" type="java.lang.String" display-name="Autorização"/>	
			<session-param name="prestador" operation="reload"/>
			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaSimples" display-name="Guias Encontradas" scope="session" />		
		</step-method>

		<step-method name="fecharGuia" display-name="Fechar Guia" title="Fechar Guia">
       		<update-param name="guia" display-name="" type="br.com.infowaypi.ecarebc.atendimentos.GuiaSimples" operation="none" >

	        	<update-collection 
						name="procedimentosCirurgicosAutorizados"  
						field-name="procedimentosParaFechamentoAnestesista"
						display-name="Fechar Procedimentos Cirúrgicos"
						type="br.com.infowaypi.ecare.procedimentos.ProcedimentoSR" >
					    <update-insert>
					    	<update-property name="procedimentoDaTabelaCBHPM.codigo" display-name="Código" input-type="string" editable="false"/>
		  			        <update-property name="procedimentoDaTabelaCBHPM.descricao" display-name="Descrição" editable="false"/>
		  			        <update-property name="anestesista.pessoaFisica.nome" display-name="Profissional Responsável" editable="false"/>
		  			        <update-property name="valorAnestesista" display-name="Valor Anestesista" input-type="bigdecimal" editable="false"/>
		  			        <update-property name="incluiVideo" display-name="Inclui Vídeo" input-type="boolean" editable="true" type="java.lang.Boolean"/>
		  			        <update-property name="horarioEspecial" display-name="Horário Especial" input-type="boolean" editable="true" type="java.lang.Boolean"/>
					    </update-insert>
	        	</update-collection>	        			
			</update-param>

			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaSimples" 
		         display-name="GuiaSelecionada" scope="session"/>
		         
		</step-method>

		<step-method name="salvarGuia" display-name="Conferir Dados" title="Conferir Dados" committed="true">
			
			<session-param name="guia" operation="none">
				<collection-display display-name="Procedimentos Cirúrgicos Fechados" name="procedimentosParaFechamentoAnestesista">
					<display-property name="procedimentoDaTabelaCBHPM.codigo" display-name="Código" type="string"/>
  			        <display-property name="procedimentoDaTabelaCBHPM.descricao" display-name="Descrição" type="string"/>
  			        <display-property name="anestesista.pessoaFisica.nome" display-name="Profissional Responsável" type="string"/>
  			        <display-property name="valorAnestesista" display-name="Valor Anestesista" type="bigdecimal"/>
  			        <display-property name="incluiVideo" display-name="Inclui Vídeo" type="boolean"/>
  			        <display-property name="horarioEspecial" display-name="Horário Especial" type="boolean"/>
				</collection-display>
			</session-param>
			
			<session-param name="prestador" operation="none"/>
			<session-param name="usuario" operation="none"/>
			
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			
			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaSimples" 
		         display-name="Conferir Dados" scope="session"/>
		         
		</step-method>
		
		<step-method name="finalizar" display-name="Imprimir Comprovante" title="Imprimir Comprovante">
				
			<html>
				<![CDATA[ <infoway:mensagemSucessoMarcacoes mensagem="Internação fechada com sucesso!" autorizacao="${guia.autorizacao}"/> ]]>
			</html>
			
			<html>
			<![CDATA[ 
				<span class="not-for-print">
					<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
				</span>
			]]>
			</html>
			
			<session-param name="guia" operation="none"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			
			<html>
				<![CDATA[ <infoway:imprimirGuiaPrestadorAnestesista titulo="GUIA DE FECHAMENTO PARA ANESTESISTA"/> 
					<span class="not-for-print">
						<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
					</span>
					]]>
			</html>
					
		</step-method>
		
	</flow>	
</jheat-mapping>