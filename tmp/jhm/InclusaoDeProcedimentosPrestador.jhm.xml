<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">

<jheat-mapping>
<flow 
	name="solicitarInclusaoDeProcedimentosPrestador" 
	class="br.com.infowaypi.ecare.services.urgencias.InclusaoProcedimentosService"
	display-name="Incluir Exames Simples" section="urgenciaInternacao">
		
	<description>Inclusão de novos exames</description>	
	
	<step-method name="buscarGuiasRealimentacao" display-name="Informar Número de Autorização" title="Informar Número de Autorização" buttons-position="bottom">
		<step-param name="autorizacao" input-type="string" size="12" type="java.lang.String" display-name="Autorização" />
		<session-param name="prestador" operation="reload"/>		
		<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta" display-name="Guia de Internacao Eletiva" scope="session" />		
	</step-method>
	
	<step-method name="addProcedimentos" display-name="Exames Clínicos" title="Exames">

			<session-param name="prestador" operation="reload"/>	

			<collection-param  
				name="procedimentosPrestador"
				display-name="Adicionar os Exames"
				type="br.com.infowaypi.ecarebc.procedimentos.Procedimento">
				
			    <insert>
				    <display-property name="procedimentoDaTabelaCBHPM.codigo" display-name="Código"/>
  			        <display-property name="procedimentoDaTabelaCBHPM.descricao" display-name="Descrição"/>
  			        <display-property name="bilateral" display-name="Bilateral" type="boolean"/>
  			        <display-property name="procedimentoDaTabelaCBHPM.nivel" display-name="Nível"/>
  			        <display-property name="quantidade" display-name="Quantidade" type="int"/>
  			        <display-property name="valorAtualDoProcedimento" display-name="Valor Unitário" type="money"/>
  			        <display-property name="valorTotal" display-name="Valor Total" type="money"/>
			    </insert>
			 
			</collection-param>
			
			<collection-param name="cids" type="br.com.infowaypi.ecarebc.procedimentos.CID" display-name="Adicionar CID (Hipóteses Diagnósticas)">
				<autocomplete style-class="autocomplete" minimum-characters="4" force-selection="true">
					<search-property name="codigoEDescricaoDaDoenca" display-name="Descrição"/>
					<name-property name="codigoEDescricaoDaDoenca" display-name="Descrição"/>
				</autocomplete>
			</collection-param>
			
			<step-param name="justificativa"  type="java.lang.String" input-type="text" display-name="Quadro Clínico"/>
			
			<session-param name="guia" operation="none"/>
			<session-param name="usuario"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaSimples" 
		         display-name="Conferir Dados" scope="session"/>
			
		</step-method>
	
	
		
	<step-method name="salvarGuia" display-name="Conferir Dados" title="Conferir Dados" committed="true">
			<html>
				<![CDATA[
					<c:if test="${not empty guia.criticas}">
						<infoway:mensagemAlerta mensagem="${guia.criticasFormatado}"/>
					</c:if>	 
				]]>
			</html>
	
			<session-param name="guia" operation="none"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
					
		</step-method>
		
		<step-method name="finalizar" display-name="Imprimir Comprovante" title="Imprimir Comprovante">
			
			<html>
				<![CDATA[ <infoway:mensagemSucessoMarcacoes mensagem="Exames/Procedimentos incluídos com sucesso!" autorizacao="${guia.autorizacao}"/> ]]>
			</html>
			
			<html>
			<![CDATA[ 
				<span class="not-for-print">
					<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
				</span>
			]]>
			</html>
			
			<session-param name="guia" operation="none"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			<html>
				<![CDATA[ <infoway:imprimirGuia titulo="&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;GUIA DE INTERNAÃ‡ÃƒO"/> 
					<span class="not-for-print">
						<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
					</span>
				]]>
			</html>
					
		</step-method>
</flow>
</jheat-mapping>