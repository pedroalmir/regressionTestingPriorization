<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">

<jheat-mapping>
	<report 
		name="relatorioExamesAutorizadosPorInternacao" 
		display-name="Exames Autorizados por Internação" 
		class="br.com.infowaypi.ecare.services.RelatorioExamesAutorizadosPorInternacao" 
		method-name="gerarRelatorio" 
		section="relatoriosAuditor"
		response-by-ajax="true">

		<description>Relatório que apresenta o total de exames autorizados por internação em um determinado período.</description>
		
		<report-param name="dataInicial" required="true" type="java.util.Date" display-name="Data Inicial" mask="99/99/9999" input-type="date"/>
		
		<report-param name="dataFinal" required="true" type="java.util.Date" display-name="Data Final" mask="99/99/9999" input-type="date"/>
		
		<select-param name="tipoInternacao" display-name="Selecione o Tipo de Internação" type="java.lang.String" required="true">
			<constants-group class="br.com.infowaypi.ecare.services.RelatorioExamesAutorizadosPorInternacao" name="Tipo de Internação">
				<entry display-name="Internação Eletiva" key-value="TIPO_INTERNACAO_ELETIVA"/>
				<entry display-name="Internação de Urgência" key-value="TIPO_INTERNACAO_URGENCIA"/>
			</constants-group>
		</select-param>
		
		<report-return name="relatorio" type="br.com.infowaypi.ecare.services.RelatorioExamesAutorizadosPorInternacao" display-name="Resultado Encontrado">
			<html>
				<![CDATA[ <infoway:tableSeparator titulo="Número de Internações" colspan="2"/> ]]>
			</html>
			<display-property name="tipoInternacao" align="left" display-name="Tipo de Internação"/>
			<display-property name="qtdeInternacoesAutorizadas" align="left" display-name="Qtde. Internações Autorizadas"/>
			<display-property name="qtdeInternacoesComProcedimentosAutorizados" align="left" display-name="Qtde. Internações c/ Exames Autorizados"/>
			
			<html>
				<![CDATA[ <infoway:tableSeparator titulo="Total de Exames" colspan="2"/> ]]>
			</html>
			<display-property name="qtdeProcedimentosAutorizados" align="left" display-name="Qtde. Exames Autorizados"/>

			<html>
				<![CDATA[ <infoway:tableSeparator titulo="Exames por Internação" colspan="2"/> ]]>
			</html>
			<display-property name="mediaExamesAutorizadosPorInternacao" align="left" display-name="Exames Autorizados por Internação"/>
		</report-return>		
	</report>
</jheat-mapping>
