				<display-property name="quantidadeTratementoOdonto"
					display-name="Quantidade de Tratamentos Odonto" />
				
			     <collection-display  display-name="E-mails (para o envio de informações do Portal do Beneficiário)"  name="emailsPortal" >
				 	<display-property name="email" align="left" size="40"/>
				 </collection-display>
				 
				<display-property name="quantidadeDiasEnvioPrimeiroEmail" display-name="Quantidade de Dias para Envio do 1o. Email"/>
				<collection-display name="emailsContratos" display-name="E-mails - Envio de informações dos contratos de prestadores">
					<display-property name="email" display-name="Email" type="string"/>					
				</collection-display>
				 
				 <collection-display display-name="Tipos de Acomodação para dobrar valor do procedimento" name="tiposDeAcomodacaoDobradas" >
				 	<display-property name="descricao" align="left" size="20"/>
				 </collection-display>
				 
				   <!-- SMS -->
				 
				 <html>
		      		<![CDATA[ <fieldset> <infoway:tableSeparator titulo="SMS Regulador" colspan="2" /> </fieldset> ]]>
				</html>
				 
				 <display-property name="smsIntervaloVerificacaoEmMinutos" display-name="Intervalo de verificação (minutos)"/>
					
				 <display-property name="smsNumeroEmHorarioNaoComercial" display-name="Número de telefone para horário não comercial"/>
				 
				 <display-property name="emailRegulador" display-name="E-mail regulador"/>

				<collection-display display-name="Horários para enviar" name="smsHorarios" >
				 	<display-property name="inicioDoIntervalo" display-name="Início do intervalo"/>
				 	<display-property name="finalDoIntervalo" display-name="Final do intervalo"/>
				 	<display-property name="tipoDeMensagem" display-name="Tipo de mensagem"/>
				 </collection-display>
				 
				 <display-property name="prazoSolicitacaoEmConsultaUrgencia" display-name="Prazo Máximo para Solicitação em Consulta de Urgência"/>
				 
			</session-param>

			<step-return display-name="Painel De Controle" name="painel"
				type="br.com.infowaypi.ecarebc.painelDeControle.PainelDeControle"
				scope="session" />
		</step-method>

