<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">
	
<jheat-mapping>

	<class-mapping class="br.com.infowaypi.ecare.arquivos.ArquivoDownloadJPG" name="ArquivoDownloadJPG" 
		display-name="Arquivos para Download" id-name="idArquivoDownloadJPG" 
		link-for-detail="descricao" section="" global-link="true" type="simple">
		
		<description>Arquivos JPG</description>
		
		<property name="descricaoArquivo" type="string">
			<display name="Descricao" options="listing,search" />
		</property>
		
		<property name="dataUpload" type="date">
			<display name="Data Upload" options="listing, detail-only" />
		</property>
			
		<property name="arquivo" type="file" not-null="false" type-file="zip" name-file="descricaoArquivo" >
			<display name="Arquivo" options="listing" mask-detail="arquivo.jpg"/>
		</property>
		
		<properties-order>
			<property-order name="descricaoArquivo"/>
		</properties-order>
		
	</class-mapping>
</jheat-mapping>