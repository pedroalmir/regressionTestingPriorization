						<search-property name="descricaoDaDoenca" display-name="Descrição"/>
						<name-property name="descricaoDaDoenca" display-name="Descrição"/>
					</autocomplete>
				</collection-param>
						
				<session-param name="guia" />
			
			
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
	
