<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">

<jheat-mapping>

	<class-mapping
		class="br.com.infowaypi.ecare.procedimentos.ProcedimentoCirurgicoParaAuditoriaDeHonorarios"
		name="ProcedimentoCirurgico" display-name="Procedimento Cirúrgico"
		id-name="idProcedimento"
		link-for-detail="procedimentoDaTabelaCBHPM.codigoEDescricao"
		type="readonly" depends="guia" section="">

		<many-to-one options="listing,search"
			class="br.com.infowaypi.ecarebc.procedimentos.TabelaCBHPM"
			name="procedimentoDaTabelaCBHPM" display-name="Procedimento"
			autocomplete="true">
			<display-property name="codigoEDescricao" />

			<restrictions>
				<restriction property-name="situacao.descricao" property-value="Ativo(a)"/>
				<restriction property-name="cirurgico" property-value="true" />
				<restriction property-name="visibilidade" type="lowerequals" property-value="1" />
		    	<!-- Procedimentos Anestesicos. -->
		    	<restriction property-name="codigo" type="notequals" property-value="90000001"/>
		    	<restriction property-name="codigo" type="notequals" property-value="90000002"/>
		    	<restriction property-name="codigo" type="notequals" property-value="90000003"/>
		    	<restriction property-name="codigo" type="notequals" property-value="90000004"/>
			</restrictions>
		</many-to-one>

		<property name="valorAtualDoProcedimento" type="money">
			<display name="Valor Unitário"
				options="listing,detail-only" />
		</property>

		<property name="valorAtualDaModeracao" type="percentage">
			<display name="Moderação" options="listing,detail-only" />
		</property>

		<!-- Profissional Responsável -->
		<many-to-one options="listing,search"
			class="br.com.infowaypi.ecarebc.associados.Profissional" 
			name="profissionalResponsavel" display-name="Profissional" minimum-characters="3"  search-type="likefull" autocomplete="true" not-null="false" mask-detail="CRM ou Nome"
			   service-class="br.com.infowaypi.ecarebc.associados.Profissional" target="credenciado">
			<display-property name="crmNome" type="string"/>
		</many-to-one>
		
		<html>
			<![CDATA[<c:if test="${usuario.role == 'auditor' || usuario.role == 'root' || usuario.role == 'auditorOdonto'}">]]>
		</html>	
		
		<many-to-one options="search"
			class="br.com.infowaypi.ecarebc.associados.Profissional" 
			name="profissionalAuxiliar1"  display-name="Primeiro profissional auxiliar" minimum-characters="3"  
			search-type="likefull" not-null="false" autocomplete="true"
			service-class="br.com.infowaypi.ecarebc.associados.Profissional" target="credenciado">
			<display-property  name="crmNome"/>
		</many-to-one>
		
		<many-to-one options="search"
			class="br.com.infowaypi.ecarebc.associados.Profissional" 
			name="profissionalAuxiliar2" display-name="Segundo profissional auxiliar" minimum-characters="3"  
			search-type="likefull" not-null="false" autocomplete="true"
			service-class="br.com.infowaypi.ecarebc.associados.Profissional" target="credenciado">
			<display-property name="crmNome"/>
		</many-to-one>
		
		<many-to-one options="search"
			class="br.com.infowaypi.ecarebc.associados.Profissional" 
			name="profissionalAuxiliar3" display-name="Terceiro profissional auxiliar" minimum-characters="3"  
			search-type="likefull" not-null="false" autocomplete="true"
			service-class="br.com.infowaypi.ecarebc.associados.Profissional" target="credenciado">
			<display-property name="crmNome"/>
		</many-to-one>
				
		<many-to-one options="search"
			class="br.com.infowaypi.ecarebc.associados.Profissional"
			name="anestesista" display-name="Anestesista" minimum-characters="3"
			search-type="likefull" not-null="false" autocomplete="true">
			<display-property name="crmNome" />
		</many-to-one>
		
		<many-to-one options="search"
			class="br.com.infowaypi.ecarebc.associados.Profissional"
			name="auxiliarAnestesista" display-name="Auxiliar Anestesista" minimum-characters="3"
			search-type="likefull" not-null="false" autocomplete="true">
			<display-property name="crmNome" />
		</many-to-one>
		
		<property name="incluiVideoProxy" type="boolean" next-field-inline="true">
			<display options="listing,search" name="Inclui Vídeo"/>
		</property>
		
		<property name="horarioEspecialProxy" type="boolean" next-field-inline="false">
			<display options="listing,search" name="Horário Especial"/>
		</property>
		
		<property name="dataRealizacao" type="date" next-field-inline="false">
			<display name="Data de Realização" options="listing,search" mask="99/99/9999" maxlength="10" size="12"/>
	    </property>
		
	    <html>
			<![CDATA[<c:if test="${guia.cirurgiaOdonto ne true}">]]>
		</html>
	    
	    <select-property name="porcentagem" display-name="Porcentagem" options="" null-option="false" >
			<entry display-name="100%" key-value="PORCENTAGEM_100"/>
			<entry display-name="70%" key-value="PORCENTAGEM_70"/>
			<entry display-name="50%" key-value="PORCENTAGEM_50"/>
		</select-property>
		
		<html>
			<![CDATA[</c:if> </c:if>]]>
		</html>

		<property name="bilateral" type="boolean">
			<display name="Bilateral" options="listing,detail-only"
				align="center" />
		</property>

		<property name="incluiVideo" type="boolean">
			<display name="Inclui Vídeo" options="detail-only"
				align="center" />
		</property>

		<property name="horarioEspecial" type="boolean">
			<display name="Horário Especial" options="detail-only"
				align="center" />
		</property>

		<many-to-one options="detail-only"
			class="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta"
			name="guia" display-name="Guia">
			<display-property name="autorizacao" />
		</many-to-one>
		
		<many-to-one name="procedimentoOrigem" display-name="Procedimento Origem" 
				class="br.com.infowaypi.ecarebc.procedimentos.Procedimento" 
				service-class="br.com.infowaypi.ecare.services.honorariomedico.AuditarGuiaHonorarioMedico"
				target="procedimentosComHonorariosDaGuiaOrigem" 
				options="listing,search" autocomplete="true" >
			<display-property name="procedimentoDaTabelaCBHPM.codigoEDescricao"/>
		</many-to-one>
		
		<collection 
			class="br.com.infowaypi.ecarebc.procedimentos.Procedimento" 
			name="procedimentos" display-name="Procedimentos" 
	    	master-detail="false"/>

		<validate-method name="validate">
			<session-param name="usuario" />
		</validate-method>

	</class-mapping>

</jheat-mapping>