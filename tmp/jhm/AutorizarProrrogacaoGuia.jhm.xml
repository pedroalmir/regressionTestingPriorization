<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">

<jheat-mapping>
<flow name="autorizarProrrogacao" class="br.com.infowaypi.ecare.services.internacao.AutorizarProrrogacaoInternacao"
	display-name="Prorrogação de Internação" section="marcacao">
		
	<description>Autorizar prorrogação</description>		
	
	<step-method name="buscarGuiasComSolicitacaoDeProrrogacao" display-name="Informar Número de Autorização" title="Informar Número de Autorização" buttons-position="bottom">
		<step-param name="autorizacao" input-type="string" size="12" type="java.lang.String" display-name="Autorização"/>	
		<session-param name="usuario"/>
		<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta" display-name="Guia" scope="session"/>
	</step-method>
	
	<step-method name="autorizarProrrogacao" display-name="Autorizar Prazo de Prorrogação">
			<html>
				<![CDATA[
				  <fieldset name="prorrogação" class="" >
				  	<legend>Informações de Prorrogação</legend>
				  	<table class="yellowTable">
						<tr class="even">
							<td style="color: rgb(153, 51, 0); text-align: right;" width="100">
								<span>Prazo Solicitado (Dias): </span></td>
							<td style="text-align:left;">
								<span class="valuesColumn">${guia.prazoProrrogado}</span></td>
						</tr>
					</table>
				  </fieldset>
				  <br/>
				]]>
			</html>
			
			<update-param name="guia" display-name="" operation="none" type="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta">
				<update-collection display-name="Acomodações Solicitadas" name="diariasSolicitadas" field-name="diariasSolicitadas" type="br.com.infowaypi.ecarebc.atendimentos.acordos.itensAcordos.ItemDiaria">
					<update-insert>
						<update-property display-name="Diária" name="diaria.codigoDescricao" editable="false" />
						<update-property display-name="Quantidade(Dias)" name="valor.quantidade" editable="false" />
						<update-property display-name="Motivo da Solicitação" name="justificativa" editable="false" size="50" />
						<update-property display-name="Situação" name="situacao.descricao" editable="false" />
						<update-property display-name="Motivo da Autorização ou Não Autorização" name="justificativaNaoAutorizacao" input-type="text" editable="true"/>
						<update-property-boolean display-name="Autorizar?" false-description="Não" true-description="Sim" name="autorizado" field-name="autorizado"/>
					</update-insert>
				</update-collection>
			</update-param>
			
			<collection-param  
				name="diariasInseridas"
				display-name="Inserir Acomodação"
				type="br.com.infowaypi.ecare.atendimentos.acordos.itensAcordos.ItemDiariaAuditoria">
			    <insert>
				    <display-property name="diaria.descricao" display-name="Tipo de acomodação"/>
				    <display-property name="justificativaNaoAutorizacao" display-name="Motivo de Inserção"/>
  			        <display-property name="valor.valor" display-name="Valor Unitário" type="money"/>				    
  			        <display-property name="valor.quantidade" display-name="Quantidade(Dias)" type="int"/>
			    </insert>
			</collection-param>
			
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			<session-param name="usuario" operation="reload" />						
			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta" 
			display-name="" scope="session"/>
	</step-method>
	
	<step-method name="salvarGuia" display-name="Conferir Dados" title="Conferir Dados" committed="true">
			<session-param name="guia" display-name="Informações da Guia" operation="none"/>
			<html>
				<![CDATA[
					<input type="hidden" name="autorizacao" id="autorizacao" value="${param.autorizacao}"/>
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
	</step-method>
	
	<step-method name="finalizar" display-name="Imprimir Comprovante" title="Imprimir Comprovante">

		<html>
			<![CDATA[<c:if test="${guia.situacao.descricao eq 'Prorrogado(a)'}"> ]]>
		</html>			
		<html>
			<![CDATA[ <infoway:mensagemSucessoMarcacoes mensagem="Internação prorrogada com sucesso!" autorizacao="${guia.autorizacao}"/> ]]>
		</html>
		<html><![CDATA[ </c:if> ]]></html>

		<html><![CDATA[<c:if test="${guia.situacao.descricao eq 'Não Prorrogado(a)'}"> ]]></html>			
			<html>
				<![CDATA[ <infoway:mensagemInformacao mensagem="A solicitação de Prorrogação de Internação NÃO foi aceita!"/> ]]>
			</html>
		<html><![CDATA[ </c:if> ]]></html>
					
		<html>
		<![CDATA[ 
			<span class="not-for-print">
				<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
			</span>
		]]>
		</html>
		
		<session-param name="guia"/>
		<html>
			<![CDATA[
				<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
			]]>
		</html>

		
		<html>
			<![CDATA[ <infoway:imprimirGuia titulo="PRORROGAÃ‡ÃƒO DE GUIA"/> 
				<span class="not-for-print">
					<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
				</span>
				]]>
		</html>
				
	</step-method>
</flow>	
</jheat-mapping>