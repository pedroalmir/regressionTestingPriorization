			</update-component-collection>
			
			
			<update-param display-name="" name="resumoGuia" type="br.com.infowaypi.ecare.resumos.ResumoGuiasHonorarioMedico">
				
				<html>
					<![CDATA[ 
						<c:if test="${resumoGuia.auditarProcedimentosClinicos}">
							<fieldset><legend>Honorários Clínicos</legend></fieldset>
						</c:if>
					]]>
				</html>
				<update-collection name="procedimentosVisitaInsert" field-name="procedimentosVisitaNovos"  display-name="Inserir"
									type="br.com.infowaypi.ecarebc.procedimentos.ProcedimentoHonorarioAuditor"
									include-method="addProcedimentoVisita" exclude-method="removeProcedimentoVisita">
					<update-insert>
						<update-property name="procedimentoDaTabelaCBHPM.codigoInsert" field-name="procedimentoDaTabelaCBHPM.codigo" display-name="Código" editable="false"/>
	  			        <update-property name="procedimentoDaTabelaCBHPM.descricaoInsert" field-name="procedimentoDaTabelaCBHPM.descricao"  display-name="Descrição" editable="false"/>
	  			        <update-property name="profissionalResponsavel.pessoaFisica.nomeInsert" field-name="profissionalResponsavel.pessoaFisica.nome"  display-name="Profissional Responsável" editable="false"/>
	  			        <update-property name="dataRealizacaoInsert" field-name="dataRealizacao" size="10" display-name="Data da Realização" editable="false" mask="99/99/9999"/>
					</update-insert>
					<restrictions>
							<restriction property-value="true" property-name="permiteHonorarioClinico" type="equals" />
					</restrictions>
					<access-restriction name="isPClinico1" type="edit">
																		 
						<session-restriction name="resumoGuia" property="auditarProcedimentosClinicos" type="boolean" operation="equals" value="true"/>
					</access-restriction>
				</update-collection>
				
				<update-collection name="procedimentosVisitaUpdate" field-name="procedimentosLayer" display-name="Alterar"
									type="br.com.infowaypi.ecarebc.procedimentos.ProcedimentoHonorarioLayer">
					<update-insert>
						<update-property-boolean name="auditado" display-name="Auditar" true-description="Sim" false-description="Não"/>
						<update-property name="procedimento.guia.autorizacao" display-name="Autorização" editable="false" />
						
