<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE jheat-mapping PUBLIC 
	"-//JHeat/JHeat DTD 1.0//BR" 
	"http://www.infoway-pi.com.br/jheat.dtd">

<jheat-mapping>
<flow 
	name="solicitarProrrogacaoGuia" 
	class="br.com.infowaypi.ecare.services.internacao.ProrrogarInternacao"
	display-name="Solicitar Prorrogação de Internação" section="urgenciaInternacao">
		 
	<description>Prorrogar guias</description>		
	
		<step-method name="buscarGuiasAProrrogar" display-name="Informar Número de Autorização" title="Informar Número de Autorização" buttons-position="bottom">
			<step-param name="autorizacao" input-type="string" size="12" type="java.lang.String" display-name="Autorização"/>
			<session-param name="prestador" operation="none"/>			
			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta" display-name="Guia de Consulta" scope="session" />
		</step-method>
	
		<step-method name="prorrogarInternacao" display-name="Informar Prazo de Prorrogação">	
			<collection-param  
				name="diarias"
				display-name="Acomodação" 
				type="br.com.infowaypi.ecarebc.atendimentos.acordos.itensAcordos.ItemDiaria">
			    <insert>
				    <display-property name="diaria.descricao" display-name="Tipo de acomodação"/>
  			        <display-property name="valor.valor" display-name="Valor Unitário" type="money"/>				    
  			        <display-property name="valor.quantidade" display-name="Quantidade(Dias)" type="int"/>
			    </insert>
			</collection-param>			
			
			<step-param name="motivoProrrogacao" display-name="Motivo da Prorrogação" input-type="text" type="java.lang.String"/>
			
			<session-param name="guia" operation="none"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			<session-param name="usuario" operation="reload" />						
			<step-return name="guia" type="br.com.infowaypi.ecarebc.atendimentos.GuiaCompleta" 
			display-name="" scope="session"/>
		</step-method>
	
		<step-method name="salvarGuia" display-name="Conferir Dados" title="Conferir Dados" committed="true">
			<session-param name="guia" operation="none"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
		</step-method>
		
		<step-method name="finalizar" display-name="Imprimir Comprovante" title="Imprimir Comprovante">
			
			<html>
				<![CDATA[ <infoway:mensagemSucessoMarcacoes mensagem="Solicitação de prorrogação de guia realizada com sucesso!" autorizacao="${guia.autorizacao}"/> ]]>
			</html>
			
			<html>
			<![CDATA[ 
				<span class="not-for-print">
					<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
				</span>
			]]>
			</html>
			
			<session-param name="guia"/>
			<html>
				<![CDATA[
					<infoway:GuiaApresentacao guiaApresentacao="${guia}"/>
				]]>
			</html>
			<html>
				<![CDATA[ <infoway:imprimirGuia titulo="PRORROGAÃ‡ÃƒO DE GUIA"/> 
					<span class="not-for-print">
						<button type="button" name="imprimir" class="actionButton" onclick="window.print();">Imprimir</button>
					</span>
				]]>
			</html>
					
		</step-method>
</flow>	
</jheat-mapping>