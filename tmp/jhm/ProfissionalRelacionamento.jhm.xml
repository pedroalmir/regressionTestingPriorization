		</property>
		
		<property name="pessoaFisica.email" type="string" not-null="false">
			<display name="Email" options=""/>
		</property>
		
		<property name="pessoaFisica.endereco.bairro" type="string"
			not-null="false">
			<display name="Bairro" options=""/>
